def input_students():
    num = int(input("How many students do you want to enter: "))
    students = []
    for i in range(num):
        name = input("Enter student name: ")
        grade = int(input("Enter student marks: "))
        students.append((name, grade))
    return students

def print_all_students(students):
    print("All students and scores:")
    for student in students:
        print(f"{student[0]} - {student[1]}")

def print_average_score(students):
    average = sum(s[1] for s in students) / len(students)
    print(f"\nAverage score: {average:.1f}")

def print_top_student(students):
    top_student = max(students, key=lambda s: s[1])
    print(f"Top student: {top_student[0]} ({top_student[1]})")

def print_failed_students(students):
    print("Failed students:")
    found = False
    for student in students:
        if student[1] < 60:
            print(student[0])
            found = True
    if not found:
        print("None")

students = input_students()
print_all_students(students)
print_average_score(students)
print_top_student(students)
print_failed_students(students)
